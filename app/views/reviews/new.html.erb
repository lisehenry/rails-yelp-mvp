<h1>Writing a new review</h1>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating, collection: (1..5) %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-success" %>
  <%= link_to 'Cancel', restaurant_path(@restaurant), class: "btn btn-danger" %>
<% end %>



